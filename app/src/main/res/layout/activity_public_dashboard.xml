<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface">

    <View
        android:id="@+id/header_bg"
        android:layout_width="0dp"
        android:layout_height="260dp"
        android:background="@drawable/bg_header_wave_green"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:src="@drawable/dentistry_24px"
        app:tint="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="56dp" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tamni način"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/tv_clinic_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smile Dental"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/iv_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rezervirajte termin brzo i jednostavno!"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_clinic_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_actions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="28dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toBottomOf="@id/header_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Što želite napraviti?"
                android:textColor="@color/on_surface"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="14dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_services"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Usluge"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:backgroundTint="@color/primary"
                android:textColor="@color/white"
                app:cornerRadius="16dp"
                app:icon="@drawable/dentistry_24px"
                app:iconTint="@color/white"
                app:iconPadding="10dp"
                app:rippleColor="@color/ripple_on_white"
                android:stateListAnimator="@animator/press_lift"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Prijavi se"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:backgroundTint="@color/surface"
                android:textColor="@color/primary"
                app:strokeColor="@color/primary"
                app:strokeWidth="2dp"
                app:cornerRadius="16dp"
                app:rippleColor="@color/ripple_primary_trans"
                android:stateListAnimator="@animator/press_lift"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Registriraj se"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:backgroundTint="@color/success"
                android:textColor="@color/white"
                app:cornerRadius="16dp"
                app:rippleColor="@color/ripple_on_white"
                android:stateListAnimator="@animator/press_lift"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usluge su dostupne i bez prijave"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:layout_marginTop="14dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
