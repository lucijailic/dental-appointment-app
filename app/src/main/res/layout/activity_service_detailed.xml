<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <TextView
            android:id="@+id/nazivUslugeDetaljno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView
            android:id="@+id/trajanjeUslugeDetaljno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView
            android:id="@+id/cijenaUslugeDetaljno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView
            android:id="@+id/opisUslugeDetaljno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReserve"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Rezerviraj termin"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:backgroundTint="#1DB954"
            android:textColor="#FFFFFF"
            app:cornerRadius="16dp"
            app:icon="@drawable/calendar_today_24"
            app:iconTint="#FFFFFF"
            app:iconPadding="10dp"
            app:rippleColor="#80FFFFFF"
            android:layout_marginTop="16dp"
            android:stateListAnimator="@animator/press_lift" />

    </LinearLayout>
</ScrollView>
